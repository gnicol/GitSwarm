%header.navbar.navbar-fixed-top.navbar-gitlab{ class: nav_header_class }
  .container
    .header-logo
      = link_to root_path, class: 'home', title: 'Dashboard', id: 'js-shortcuts-home', data: {toggle: 'tooltip', placement: 'bottom'} do
        %div
        %h3 GitSwarm
    .header-content
      - if !@recent_projects.nil?
        %div.dropdown.dashboard-menu
          %h1.dropdown-toggle.title{'data-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'tabIndex' => '0' }
            = title
            %span.caret
          %ul.dropdown-menu{role: 'menu',
              'aria-label' => 'Dashboard Menu',
              'data-recent-updated' => projects_to_simple_json(@recent_projects)}
            %li{role: 'menuitem', class: current_route?('dashboard#show') ? 'current' : ''}
              = link_to root_path do
                Dashboard
            %li{role: 'menuitem', class: current_route?('projects#starred') ? 'current' : ''}
              = link_to starred_dashboard_projects_path do
                View My Starred Projects
            %li{role: 'menuitem', class: current_route?('projects#index') ? 'current' : ''}
              = link_to explore_projects_path do
                View All Projects
      - else
        %div.dashboard-menu
          %h1.title
            = title

      %ul.nav.navbar-nav.pull-right
        %li.hidden-sm.hidden-xs
          = render 'layouts/search'
        %li.visible-sm.visible-xs
          = link_to search_path, title: 'Search', data: {toggle: 'tooltip', placement: 'bottom'} do
            = icon('search')
        %li.hidden-xs
          = link_to help_path, title: 'Help', data: {toggle: 'tooltip', placement: 'bottom'} do
            = icon('question-circle fw')
        - if current_user.is_admin?
          %li.hidden-xs
            = link_to admin_root_path, title: 'Admin Area', data: {toggle: 'tooltip', placement: 'bottom'} do
              = icon('wrench fw')
        %li.dropdown.navbar-right
          %a.dropdown-toggle.profile-pic{href: '#', 'data-toggle' => 'dropdown', 'aria-haspopup' => 'true', title: 'User Menu', 'aria-label' => 'User Menu'}
            = image_tag avatar_icon(current_user.email, 26)
            %span.caret>
          %ul.dropdown-menu{role: 'menu', 'aria-label' => 'User Menu'}
            %li{role: 'menuitem'}
              = link_to current_user, class: 'profile-link' do
                Profile
            %li{role: 'menuitem'}
              = link_to user_snippets_path(current_user) do
                My Snippets
            %li{role: 'menuitem'}
              = link_to profile_path do
                My Settings
            %li{role: 'menuitem'}
              = link_to destroy_user_session_path, class: 'logout', method: :delete do
                Log out

= render 'shared/outdated_browser'
